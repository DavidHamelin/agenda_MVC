@model Agenda.Models.appointements

@{
    ViewBag.Title = "AddAppointement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ajouter un Rendez-Vous</h2>

<form method="POST" action="#" name="addAppointement" id="addAppointement">
    @Html.AntiForgeryToken()
    <div class="form-horizontals">

        <div class="form-group">
            <label for="dateTime" class="control-label">Date et Heure du RDV : </label>
            @Html.TextBoxFor(m => m.dateHour, new { @class = "datefield form-control", placeholder = "Date/Heure du rdv", type = "datetime", required = "required" })
            @*@Html.Editor("dateHour", new { @type = "datetime", @class = "datefield form-control", @placeholder = "Entrez une date de rdv" @required = "required" })*@
            @Html.ValidationMessageFor(model => model.dateHour, "", new { @class = "text-danger" })
        </div>
        @*<div class="form-group">
            <label for="dateRdv">Votre date de rdv</label>
            <input type="date" id="dateRdv" name="dateRdv">
        </div>
        <div class="form-group">
            <label for="hourRdv">Votre heure de rdv</label>
            <input type="time" id="hourRdv" name="hourRdv">
        </div>*@ 
        <div class="form-group">
            <label for="chooseABroker" class="control-label">Courtier : </label>
            @Html.DropDownList("idBroker", null, htmlAttributes: new { @class = "form-control" })

        </div>
        <div class="form-group">
            <label for="chooseACustomer" class="control-label">Client : </label>
            @Html.DropDownList("idCustomer", null, htmlAttributes: new { @class = "form-control" })

        </div>
        <div class="form-group">
            <button class="btn btn-default" type="submit" id="submit" name="submit">Enregistrer</button>
        </div>
    </div>
</form>